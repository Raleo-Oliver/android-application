<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#084C6A"
    android:weightSum="10"
    tools:context=".MainActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="COVIDE-19 VACCINE APP"
    android:textSize="25dp"
    android:textStyle="bold"
    android:layout_centerInParent="true"
    />
  </RelativeLayout>
  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:padding="14dp"
      android:layout_weight="8"
      android:alignmentMode="alignMargins"
      android:columnOrderPreserved="false"
      android:columnCount="2"
      android:rowCount="2"
      >
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="vaccine"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|center_vertical"
          android:layout_margin="16dp"
          android:orientation="vertical"

          >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/image"
            android:background="@drawable/vaccine"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VACCINATION"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"

            />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="personalInfo"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|center_vertical"
          android:layout_margin="16dp"
          android:orientation="vertical"

          >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/image2"
            android:background="@drawable/personal_icon"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFO"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"

            />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="register"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|center_vertical"
          android:layout_margin="16dp"
          android:orientation="vertical"

          >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/image3"
            android:background="@drawable/population_icon"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"

            />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:onClick="appointment"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|center_vertical"
          android:layout_margin="16dp"
          android:orientation="vertical"

          >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/image4"
            android:background="@drawable/vaccination"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"

            />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </GridLayout>

</LinearLayout>